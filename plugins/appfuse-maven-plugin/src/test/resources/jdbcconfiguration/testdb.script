CREATE SCHEMA PUBLIC AUTHORIZATION DBA
CREATE MEMORY TABLE CATEGORIES(CATEGORIES_ID INTEGER GENERATED BY DEFAULT AS IDENTITY(START WITH 1)  NOT NULL PRIMARY KEY,TITLE VARCHAR(100) DEFAULT '' NOT NULL,DISPLAY_ORDER INTEGER DEFAULT 0 NOT NULL,MODERATED INTEGER DEFAULT 0)
CREATE MEMORY TABLE FORUMS(FORUM_ID INTEGER GENERATED BY DEFAULT AS IDENTITY(START WITH 1)  NOT NULL PRIMARY KEY,CATEGORIES_ID INTEGER DEFAULT 1 NOT NULL,FORUM_NAME VARCHAR(150) DEFAULT '' NOT NULL,FORUM_DESC VARCHAR(255) DEFAULT NULL,FORUM_ORDER INTEGER DEFAULT 1,FORUM_TOPICS INTEGER DEFAULT 0 NOT NULL,FORUM_LAST_POST_ID INTEGER DEFAULT 0 NOT NULL,MODERATED INTEGER DEFAULT 0)
CREATE INDEX IDX_FORUMS_CATEGORIES_ID ON FORUMS(CATEGORIES_ID)
CREATE USER SA PASSWORD ""
GRANT DBA TO SA
SET WRITE_DELAY 20
SET SCHEMA PUBLIC