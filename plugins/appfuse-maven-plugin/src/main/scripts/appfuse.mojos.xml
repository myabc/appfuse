<pluginMetadata>
  <mojos>
    <mojo>
      <goal>hello</goal>
      <!-- This element refers to the Ant target we'll invoke -->
      <call>hello</call>
      <!--  This insures we have project based parameters to pass. -->
      <requiresProject>true</requiresProject>
      <description>
        This is a mojo to allow testing of the appfuse plugin and
        attribute manipulation.
      </description>
      <parameters>
        <parameter>
          <name>projectName</name>
          <property>projectName</property>
          <required>true</required>
          <readonly>true</readonly>
          <defaultValue>${project.name}</defaultValue>
          <type>java.lang.String</type>
          <description>
            The name of the project currently being built.
          </description>
        </parameter>
        <parameter>
          <name>UserName</name>
          <property>appfuse.user.name</property>
          <required>true</required>
          <readonly>true</readonly>
          <defaultValue>Appfuse Default Test Name</defaultValue>
          <type>java.lang.String</type>
          <description>
            This is an attribute you can use to test and understand
            attrbute passing in this mojo. If you run mvn appfuse:hello
            you will get the default. You can change this by using mvn
            -Dappfuse.user.name=myname appfuse:helloname of the project
            currently being built. You can also set a user.name attrbute
            in the plugin confguration or pass it via settings in a pom,
            parent pom or settings.xml.
          </description>
        </parameter>
      </parameters>
    </mojo>
    <mojo>
      <goal>genmodel</goal>
      <requiresProject>true</requiresProject>
      <!-- this element refers to the Ant target we'll invoke -->
      <call>genmodel</call>
      <description>
        This goal will generate annotated model pojos and a
        hibernate.cfg.xml file from the database properties file.
      </description>
      <parameters>
        <parameter>
          <name>compileClasspath</name>
          <property>appfuse.compile.classpath</property>
          <required>true</required>
          <readonly>true</readonly>
          <defaultValue>
            ${project.compileClasspathElements}
          </defaultValue>
          <type>java.util.List</type>
        </parameter>
        <parameter>
          <name>Hibernate Properties File</name>
          <property>hibernate.properties.file</property>
          <required>true</required>
          <readonly>true</readonly>
          <defaultValue>
            ${basedir}/target/classes/jdbc.properties
          </defaultValue>
          <type>java.lang.String</type>
          <description>
            The name of the properties file containing the database
            connection properties.
          </description>
        </parameter>
        <parameter>
          <name>Reverse Engineering File</name>
          <property>hibernate.reveng.file</property>
          <required>true</required>
          <readonly>true</readonly>
          <defaultValue>
            ${basedir}/src/main/resources/hibernate.reveng.xml
          </defaultValue>
          <type>java.lang.String</type>
          <description>
            The name of the reverse engineering file used to control the
            creation of the model layer from the database.
          </description>
        </parameter>
        <parameter>
          <name>Source Generation Destination Directory</name>
          <property>appfuse.src.destination.dir</property>
          <required>true</required>
          <readonly>true</readonly>
          <defaultValue>
            ${basedir}/target/generated-sources/main/java
          </defaultValue>
          <type>java.lang.String</type>
          <description>
            The name of the directory to generate the java source to.
          </description>
        </parameter>
        <parameter>
          <name>Resource Generation Destination Directory</name>
          <property>appfuse.resource.destination.dir</property>
          <required>true</required>
          <readonly>true</readonly>
          <defaultValue>
            ${basedir}/target/generated-sources/main/resources
          </defaultValue>
          <type>java.lang.String</type>
          <description>
            The name of the directory to generate resources to.
          </description>
        </parameter>
        <parameter>
          <name>Model Package Name</name>
          <property>appfuse.model.package.name</property>
          <required>true</required>
          <readonly>true</readonly>
          <defaultValue>${project.groupId}.model</defaultValue>
          <type>java.lang.String</type>
          <description>
            The package name for the model objects.
          </description>
        </parameter>
        <parameter>
          <name>projectName</name>
          <property>projectName</property>
          <required>true</required>
          <readonly>true</readonly>
          <defaultValue>${project.name}</defaultValue>
          <type>java.lang.String</type>
          <description>
            The name of the project currently being built.
          </description>
        </parameter>
        <parameter>
          <name>JDK 5 Flag</name>
          <property>appfuse.jdk5</property>
          <required>true</required>
          <readonly>true</readonly>
          <defaultValue>true</defaultValue>
          <type>java.lang.String</type>
          <description>
            The flag that indicates if jdk5 annotations should be used.
          </description>
        </parameter>
        <parameter>
          <name>EJB 3 Flag</name>
          <property>appfuse.ejb3</property>
          <required>true</required>
          <readonly>true</readonly>
          <defaultValue>true</defaultValue>
          <type>java.lang.String</type>
          <description>
            The flag that indicates if ejb3 annotations should be used.
          </description>
        </parameter>
      </parameters>
    </mojo>
