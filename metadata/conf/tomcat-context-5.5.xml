<Context path="/appfuse" docBase="appfuse" debug="99" reloadable="true"
    antiJARLocking="true" antiResourceLocking="true">

    <Resource name="jdbc/appfuse" auth="Container" type="javax.sql.DataSource"
              maxActive="100" maxIdle="30" maxWait="10000"
              driverClassName="@DB-DRIVERNAME@"
              username="@DB-USERNAME@" password="@DB-PASSWORD@" 
              url="@DB-URL@"
              defaultAutoCommit="true" removeAbandoned="true" 
              removeAbandonedTimeout="60" logAbandoned="true"/>
</Context>