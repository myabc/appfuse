<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 3.0//EN"
    "http://tuckey.org/res/dtds/urlrewrite3.0.dtd">

<urlrewrite use-context="true">
    <rule>
        <from>/login.jsp</from>
        <to type="redirect">login</to>
    </rule>
    <!--<rule>
        <from>/passwordHint.html\?username=(.*)</from>
        <to type="redirect">passwordhint?username=$1</to>
    </rule>-->
    <!-- The following fixes a bug in XFire:        -->
    <!-- http://jira.codehaus.org/browse/XFIRE-1089 -->
    <rule>
        <from>^//services/(.*)$</from>
        <to type="forward">/services/$1</to>
    </rule>
</urlrewrite>
